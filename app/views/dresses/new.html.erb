<div class="d-flex justify-content-center">
   <h3 class="header p-4">Upload your dress! </h3>
</div>

<div class="d-flex justify-content-center">

  <%= simple_form_for(@dress) do |f| %>
  <%= f.input :name %>
  <%= f.input :size, collection: ["UK 4","UK 6","UK 8","UK 10","UK 12","UK 14","UK 16"] %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :category, collection: Dress.pluck(:category).uniq %>
  <%= f.input :photo, as: :file %>

  <div class="d-flex justify-content-center">
      <%= f.submit 'Create new dress!',  class: "btn btn-outline-dark  mb-3" %>
      <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
    <%= link_to "Go back", dresses_path, class: "btn btn-link" %>
</div>
