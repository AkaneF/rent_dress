
<div class= "head">
  <h1>Booking Details</h1>
</div>

<div class="bookings-container">
  <% @bookings.each do |booking| %>
    <% days = (booking.end_date - booking.start_date).to_i %>

    <div class="booking-card">
      <div class="booking-photo">
        <p><%= cl_image_tag booking.dress.photo.key %></p>
      </div>

      <div class="booking-details">
        <p class= booking-head><%= booking.dress.name %></p>
        <p>Category: <%= booking.dress.category %></p>
        <p>Price:Â£ <%= (booking.dress.price) * days %></p>
        <p>Size: <%= booking.dress.size %></p>
        <p>Start Date: <%= booking.start_date %></p>
        <p>End Date: <%= booking.end_date %></p>
        <p>Total Days: <%= days %></p>
        <%= link_to booking_path(booking),method: :delete do%>
        <i class="bin fas fa-trash-alt"></i>
      <% end %>
      </div>
    </div>
  <% end %>
</div>

<button class= 'dress-index'><%= link_to "Back", dresses_path %></button>

